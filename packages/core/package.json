{
  "name": "@edge-lint/core",
  "version": "0.1.4",
  "description": "Core linting engine for Edge.js templates",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest --passWithNoTests",
    "clean": "rm -rf dist *.tsbuildinfo",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "edge-error": "^4.0.2",
    "edge-lexer": "^6.0.3",
    "edge-parser": "^9.0.4"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "edge",
    "edgejs",
    "template",
    "linter",
    "lint"
  ],
  "license": "MIT",
  "author": "Christopher Watson <cawatson1993@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/watzon/edge-lint.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/watzon/edge-lint/tree/main/packages/core",
  "bugs": {
    "url": "https://github.com/watzon/edge-lint/issues"
  }
}
